<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/textView_regular"
        android:gravity="center_horizontal"
        android:text="Playing from Album"
        android:textAllCaps="true"
        android:textSize="@dimen/song_list_smaller" />

    <TextView
        android:id="@+id/playing_album_text_view"
        style="@style/textView_bold"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/playing_artwork_image_view"
        android:layout_width="@dimen/now_playing_image"
        android:layout_height="@dimen/now_playing_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/playing_title_text_view"
        style="@style/textView_bold"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/playing_artist_text_view"
        style="@style/textView_regular"
        android:gravity="center_horizontal"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/previous_icon" />

        <ImageView
            android:layout_width="@dimen/now_playing_play_icon"
            android:layout_height="@dimen/now_playing_play_icon"
            android:layout_weight="1"
            android:contentDescription="play icon"
            android:src="@drawable/play_icon" />

        <ImageView
            android:layout_width="@dimen/now_playing_small_icon"
            android:layout_height="@dimen/now_playing_small_icon"
            android:layout_weight="1"
            android:src="@drawable/next_icon" />


    </LinearLayout>


</LinearLayout>