<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/album_image_view"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/textView_bold"
            android:textSize="@dimen/song_list_title" />

        <TextView
            android:id="@+id/artist_text_view"
            style="@style/textView_regular"
            android:textSize="@dimen/song_list_smaller" />

        <TextView
            android:id="@+id/album_text_view"
            style="@style/textView_regular"
            android:textSize="@dimen/song_list_smaller" />

    </LinearLayout>

    <ImageView
        android:id="@+id/album_image_view"
        android:layout_width="@dimen/song_list_image"
        android:layout_height="@dimen/song_list_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/play_button_image"
        android:layout_width="@dimen/song_list_icon"
        android:layout_height="@dimen/song_list_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/play_icon" />

</RelativeLayout>